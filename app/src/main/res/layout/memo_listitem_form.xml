<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff006699"

    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ff99ffcc"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_itempPoto"
                android:background="#ffff3333"
                android:layout_margin="1dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#ff9900ff"

                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_itemDate"
                    android:background="#ffff6600"
                    android:layout_marginRight="4dp"
                    android:text="OOOO년 OO월 OO일"
                    android:gravity="right"
                    android:textColor="#ff006600"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_itemText"
                    android:layout_marginRight="4dp"
                    android:text="텍스트"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:textColor="#ff000000"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:background="#ffccff33"
            >
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:background="#ffffff"
                android:layout_gravity="center_horizontal"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/image_itemVideoState"
                    android:background="#ffffffcc"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/image_itemVoiceState"
                    android:background="#ffffffcc"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/image_itemHandText"
                android:background="#ffcc33cc"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>

</LinearLayout>